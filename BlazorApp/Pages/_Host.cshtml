@page "/"
@namespace BlazorApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Conversion Dashboard</title>
    <base href="~/"/>
    <link href="css/site.css" rel="stylesheet"/>
    <link href="BlazorApp.styles.css" rel="stylesheet"/>
    <link rel="shortcut icon" type="x-icon" href="Icons/Favicon.svg"/>

    <style>
        /* General styling for the Radzen table */
        #log-tab > .rz-tabview-panels{
            background-color: #384561 !important;
            border: none;
            overflow: hidden;
            text-align: left;
            border-radius: 0;
        }
        
        /* Ensures new data-entries comes in from the top */
        table {
            table-layout: fixed !important;
            display: block;
        }
        
        /* Size of Error and Reconciliation tables */
        .rz-grid-table { 
            height: 74vh;
            max-height: 74vh;
        }
        
        /* Size of efficiency table */
        .efficiency-table-styling .rz-grid-table { 
            height: 100%;
            max-height: 100%;
        }
        
        /* Padding for the entire tables */
        .rz-tabview-panel {
            padding: 1rem 0 0 0 !important;
        }      
        
        /* Styling for tabs on Error and Reconciliation page */
        .TabElement {
            display: flex;
            align-items: center;
            border-radius: 0 !important; 
            border: none !important;
            background-color: #0F2147 !important;
            height: 4em;
        }
        
        /* Styling, which points at the active-tag, for tabs on Error and Reconciliation page */
        .TabElement > a {
            color: #FFFFFF !important;
            text-decoration: none !important;
            height: 100%;
            width: 100%;
        }
        
        /* Needed background colouring */
        .rz-tabview-selected {
            background-color: #384561 !important;
        }  
        
        /* Color of titles and icons */
        .rz-column-title, .rz-sortable-column-icon, .rz-grid-filter-icon  {
            color: #FFFFFF !important;
        }
        
        /* Styling for the titles of the columns */
        .rz-unselectable-text {
            background-color: #384561 !important;
            border: none !important;
            text-align: left;
        }

        .efficiency-container .rz-unselectable-text, .efficiency-table-container .rz-unselectable-text {
            background-color: #0F2147 !important;
        }
        
        /* Outer border removal and table background colour */
        .rz-data-grid{
            border: none !important;
            background-color: #384561 !important;
        }
        
        /* Changes colours of the buttons */
        .rz-paginator-element {
            background-color: #0F2147 !important;
            color: white !important;
            text-decoration: none !important;
        }
    </style>
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/default-base.css">
</head>
<body>
<component type="typeof(App)" render-mode="ServerPrerendered"/>

<div id="blazor-error-ui">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<script src="_framework/blazor.server.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>

<!-- This is the glue between Blazor and Chart.js -->
<script src="_content/ChartJs.Blazor.Fork/ChartJsBlazorInterop.js"></script>
</body>
</html>